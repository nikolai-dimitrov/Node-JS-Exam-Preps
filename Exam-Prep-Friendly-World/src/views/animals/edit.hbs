<main class="edit">
  <!-- Edit Page (Only for logged-in users) -->
  <section id="create">
    <div class="form">
      <h2>Edit item</h2>
      <form class="create-form" method="post">
        <input
          type="text"
          name="name"
          id="name"
          placeholder="Name"
          value="{{currentAnimal.name}}"
        />
        <input
          type="text"
          name="years"
          id="years"
          placeholder="Years"
          value="{{currentAnimal.years}}"
        />
        <input
          type="text"
          name="kind"
          id="kind"
          placeholder="Kind"
          value="{{currentAnimal.kind}}"
        />
        <input
          type="text"
          name="image"
          id="animal-img"
          placeholder="Image url"
          value="{{currentAnimal.image}}"
        />
        <input
          type="text"
          name="need"
          id="needs-of"
          placeholder="Needs of"
          value="{{currentAnimal.need}}"
        />
        <input
          type="text"
          name="location"
          id="location"
          placeholder="Location"
          value="{{currentAnimal.location}}"
        />
        <textarea
          id="description"
          placeholder="Description..."
          name="description"
        >{{currentAnimal.description}}</textarea>

        <button type="submit">Edit</button>
      </form>
    </div>
  </section>
</main>