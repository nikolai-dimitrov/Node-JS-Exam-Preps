<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Home Page</title>

    <!-- Do not forget to change the path to the css file -->
    <link href="/static/css/style.css" type="text/css" rel="stylesheet" />
  </head>

  <body>

    <div id="box">

      <!-- In case of error, you should display div with class "error-container" -->
      <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
      {{#if errorMessages}}
        <div class="error-container">
          <p>{{errorMessages}}</p>
        </div>
      {{/if}}

      <nav>
        <!-- Do not forget to change the path to the image -->
        <img src="/static/img/logo.png" alt="logo" />

        <ul class="menu">
          <li><a href="/">Home</a></li>
          <li><a href="/creatures/all-posts">All Posts</a></li>
          <!-- Logged users -->
          {{#if isAuthenticated}}
            <li><a href="/creatures/create">Create Post</a></li>
            <li><a href="/users/profile">Profile</a></li>
            <li><a href="/users/logout">Logout</a></li>
          {{else}}
            <!-- Guest users -->
            <li><a href="/users/register">Register</a></li>
            <li><a href="/users/login">Login</a></li>
          {{/if}}
        </ul>

      </nav>
      {{{body}}}

      <footer>
        Â© JS Back-End Exam 2023
      </footer>
    </div>

  </body>

</html>