 <main id="edit">
        <!-- In case of error, you should display div with class "errorContainer" -->
        <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
        {{#if errorMessages}}
         <div>
            <div class="errorContainer">
                <p>{{errorMessages}}</p>
            </div>
        </div> 
        {{/if}}
        <section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Game Code Offer</h1>
                <form method="post">
                    <label>Platform:</label>
                    <select id="platform" name="platform">
                        {{#each platformOptions}}
                        <option value="{{value}}" {{selected}}>{{name}}</option>
                        {{/each}}
                    </select>
                    <label>Name:</label>
                    <input type="text" id="name" name="name" value="{{currentGame.name}}">
                    <label>Image:</label>
                    <input type="text" id="image" name="image" value="{{currentGame.image}}" placeholder="https://image.api.playstation.com/vulcan/ap/rnd/202208/0921/dR9KJAKDW2izPbptHQbh3rnj.png">
                    <label>Price:</label>
                    <input type="number" id="price" name="price" value="{{currentGame.price}}">
                    <label>Genre:</label>
                    <input type="text" id="genre" name="genre" value="{{currentGame.genre}}">
                    <label>Description:</label>
                    <textarea id="description" name="description">{{currentGame.description}}
                    </textarea>
                    <input type="submit" id="btn" value="EDIT"></input>
                </form>
            </div>
        </section>
    </main>

