<main id="details">
  <section id="details-info">
    <div class="game-image">
      <img src="{{currentGame.image}}" />
    </div>

    <div class="game-info">
      <div class="game-text">
        <h1 id="name">{{currentGame.name}}</h1>
        <h3 id="platform">Platform: {{currentGame.platform}}</h3>
        <p id="price"><span>Price: ${{currentGame.price}}</span></p>
        <p id="genre"><span>Genre: {{currentGame.genre}}</span></p>
        <p id="description">{{currentGame.description}}</p>
      </div>
      {{#if isAuthenticated}}
        <div class="product-btn">
          <!--Only for registered user and author of the publication -->
          {{#if isOwner}}
            <div class="author">
              <a
                href="/games/edit/{{currentGame._id}}"
                class="btn-edit"
              >Edit</a>
              <a
                href="/games/delete/{{currentGame._id}}"
                class="btn-delete"
              >Delete</a>
            </div>
          {{else}}
            {{#unless wasBought}}
              <!-- Logged in user who has not yet buy this game code-->
              <a href="/games/buy/{{currentGame._id}}" class="btn-buy">Buy</a>
            {{else}}
              <!-- Logged in user who has already buy this game code-->
              <p class="buy-message">You have already bought this game</p>
            {{/unless}}
          {{/if}}
        </div>
      {{/if}}
    </div>
  </section>
</main>