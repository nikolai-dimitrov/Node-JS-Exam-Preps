<html lang="en">
  <!-- Starts Head Section -->

  <head>
    <link rel="stylesheet" href="/static/css/styles.css" />
    <link
      rel="icon"
      type="image/x-icon"
      href="/static/images/free-30-instagram-stories-icons23_122570.png"
    />
    <title>Petstagram</title>
  </head>

  <!-- Starts Body Section -->

  <body>
    <!--Error Container-->
    {{!-- {{#each errorMessages}} --}}
    {{#if errorMessages}}
      <div>
        <div class="errorContainer">
          <p>{{errorMessages}}</p>
        </div>
      </div>
    {{/if}}
    {{!-- {{/each}} --}}

    <!-- Starts Header Section with Navigation Bar -->
    <header>
      <nav class="navbar">
        <div class="container">
          <div class="logo">
            <a href="/">
              <img
                width="50px"
                src="/static/images/free-30-instagram-stories-icons23_122570.png"
                alt="img1"
              />
            </a>
            <a class="home" href="/">
              <i>Petstagram</i>
            </a>
          </div>

          <div class="nav-links">
            <ul class="nav-group">
              <li class="nav-item">
                <a href="#">
                  <i>Catalog</i>
                </a>
              </li>
              <li class="nav-item">
                <a href="#">
                  <i>Add Photo</i>
                </a>
              </li>

              <li class="nav-item">
                <a href="#">
                  <i>Profile</i>
                </a>
              </li>
              {{#if isAuthenticated}}
                <li class="nav-item">
                  <a href="/users/logout">
                    <i>Logout</i>
                  </a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a href="/users/login">
                    <i>Login</i>
                  </a>
                </li>
                <li class="nav-item">
                  <a href="/users/register">
                    <i>Register</i>
                  </a>
                </li>
              {{/if}}
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- Starts Main Section -->
    {{{body}}}

    <!-- Starts Footer Section -->
    <div class="footer">
