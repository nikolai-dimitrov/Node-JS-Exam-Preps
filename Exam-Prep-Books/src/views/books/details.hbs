<section class="details-page">
  <h1>Details</h1>
  <article class="details-card">

    <article class="details-card-text">
      <h2>Title:<br /> {{currentBook.title}}</h2>
      <h3>Author: {{currentBook.author}}</h3>
      <h3>Stars: {{currentBook.stars}}</h3>
      <h3>Genre: {{currentBook.genre}}</h3>
      <h3>Review: {{currentBook.bookReview}}</h3>
      </h3>
    {{#if isAuthenticated}}
      <!-- If there is no registered user, do not display buttons-->
      <div class="buttons">
        <!-- Only for registered user and author of the review -->
        {{#if isOwner}}
        <a href="/books/edit/{{currentBook._id}}" class="btn-edit">Edit</a>
        <a href="/books/delete/{{currentBook._id}}" class="btn-delete">Delete</a>
        {{else}}
        <!-- logged in user who has not yet wished book-->
        {{#unless hasAlreadyWished}}
        <a href="/books/wish/{{currentBook._id}}" class="btn-wish">Wish to read</a>
        <!-- logged in user who has already wished book-->
        {{else}}
        <p class="wish-pub">You already added the book to your wish list</p>
        {{/unless}}
        {{/if}}
      </div>
      {{/if}}

    </article>

    <article class="details-card-image">
      <img src="{{currentBook.image}}" />
    </article>

  </article>
</section>