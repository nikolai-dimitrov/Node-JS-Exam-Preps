<section class="search">
  <h1>Search</h1>

  <form class="search-form" method="post">
    <input
      type="text"
      class="search-name"
      name="name"
      placeholder="Search Name..."
    />
    <input
      type="text"
      class="search-type"
      name="type"
      placeholder="Search Type..."
    />
    <button type="submit" class="btn-search">Search</button>
  </form>
  {{#if searchedElectronics}}
    <!--If there are matches after search-->
    <div class="search-result">
      {{#each searchedElectronics}}
        <div class="search-list">
          <a
            href="/electronics/details/{{_id}}"
            class="added-electronics-in-market"
          >
            <img src="{{image}}" class="picture-added-electronics" />
            <h3>{{name}}</h3>
            <span>Price: ${{price}}</span>
          </a>
        </div>
      {{/each}}

    </div>
  {{else}}
    <!--If there are no matches-->
    <div class="no-match">
      <p>No match was found!</p>
    </div>
  {{/if}}
</section>